<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Chapter1.BindingToDataModel" Title="Binding Model">
    <ContentPage.Content>
        <StackLayout>
            <ListView ItemsSource="{Binding ListDaftarMenu}">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <TextCell Text="{Binding Nama}" Detail="{Binding Keterangan}"
                                  DetailColor="Red" />
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>